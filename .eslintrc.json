{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": "off", // Turn off indentation rule
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "no-unused-vars": "error", // Check for unused imports/variables
    "semi-style": ["error", "last"],
    "no-console": "warn" // Warn about using console.log
  }
}
